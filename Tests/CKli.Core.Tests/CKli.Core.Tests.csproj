<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Remotes\**" />
    <EmbeddedResource Remove="Remotes\**" />
    <None Remove="Remotes\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CK.Testing.NUnit" Version="14.0.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="17.14.1" />
    <PackageReference Include="NUnit3TestAdapter" Version="5.1.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CKli.Loader\CKli.Loader.csproj" />
  </ItemGroup>

  <!-- Consider the Remotes and the Cloned folder as pure content: their .csproj are ignored by the build system. -->
  <ItemGroup>
    <Content Include="$(Content);Remotes\**;Cloned\**" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Remotes\**;Cloned\**" />
  </ItemGroup>

</Project>
