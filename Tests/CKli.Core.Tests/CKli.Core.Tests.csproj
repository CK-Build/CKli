<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <IsPackable>false</IsPackable>
    <LangVersion>13</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CK.Testing.NUnit" Version="14.1.0" />
    <PackageReference Include="Microsoft.NET.Test.Sdk" Version="18.0.1" />
    <PackageReference Include="NUnit3TestAdapter" Version="6.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CKli.Loader\CKli.Loader.csproj" />
  </ItemGroup>

  <!-- Consider the Remotes, Cloned and PackagedPlugins folders as pure
       content: their .csproj are ignored by the build system.
  -->
  <ItemGroup>
    <None Include="$(Content);Remotes\**;Cloned\**;PackagedPlugins\**" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Remotes\**;Cloned\**;PackagedPlugins\**" />
  </ItemGroup>

</Project>
