<A1Test>

  <LoadLibrary Name="CK.Env.Plugin.Basics"/>
  <LoadLibrary Name="CK.Env.Plugin.SolutionDriver" />
  <LoadLibrary Name="CK.Env.Plugin.Appveyor" />
  <LoadLibrary Name="CK.Env.Plugin.GitLab" />
  <!-- There is only pure NuGet projects in this A1-Test world. -->
  <!--<LoadLibrary Name="CK.Env.Plugin.NPM" />-->
  <!--<LoadLibrary Name="CK.Env.Plugin.CKSetup" />-->
  <LoadLibrary Name="CK.Env.Plugin.NuGet" />

  <SharedHttpClient />
  <ArtifactCenter />
  <LocalFeedProvider />
  <NuGetClient />
  <WorldState IsPublic="True" />


  <Artifacts>
    <SourceFeeds>
      <Feed Type="NuGet" Name="Signature-OpenSource" Url="https://pkgs.dev.azure.com/Signature-OpenSource/_packaging/Default/nuget/v3/index.json" >
        <Credentials UserName="SignatureOpenSource" PasswordSecretKeyName="SIGNATURE_OPENSOURCE_READ_PAT" />
      </Feed>
      <Feed Type="NuGet" Name="CKEnvTest3" Url="https://pkgs.dev.azure.com/Signature-OpenSource/_packaging/CKEnvTest3/nuget/v3/index.json" >
        <Credentials UserName="SignatureOpenSource" PasswordSecretKeyName="SIGNATURE_OPENSOURCE_READ_PAT" />
      </Feed>
    </SourceFeeds>
    <TargetRepositories>
      <Repository Type="NuGetAzure"
                  Organization="Signature-OpenSource"
                  FeedName="CKEnvTest3"
                  CheckName="NuGet:Azure:Signature-OpenSource-CKEnvTest3"
                  CheckSecretKeyName="AZURE_FEED_SIGNATURE_OPENSOURCE_PAT" />
    </TargetRepositories>
  </Artifacts>


  <SharedSolutionSpec>
    <RemoveNuGetSourceNames>
      <add Name="CKEnvTest" />
      <add Name="Invenietis - Release" />
      <add Name="Invenietis - Preview" />
      <add Name="Invenietis - CI" />
    </RemoveNuGetSourceNames>
    <ArtifactTargets>
      <add Name="NuGet:Azure:Signature-OpenSource-CKEnvTest3" />
    </ArtifactTargets>
  </SharedSolutionSpec>

  <Folder Name="Projects">

    <GitFolder Name="CK-UnitsOfMeasure" Url="https://github.com/Invenietis/CK-UnitsOfMeasure.git">
      <Branch Name="develop">
        <SolutionSpec />
      </Branch>
    </GitFolder>

    <GitFolder Name="CodeCake" Url="https://github.com/SimpleGitVersion/CodeCake.git">
      <Branch Name="develop">
        <SolutionSpec NoDotNetUnitTests="true" NoStrongNameSigning="true" />
      </Branch>
    </GitFolder>

    <GitFolder Name="CK-ActivityMonitor" Url="https://github.com/Invenietis/CK-ActivityMonitor.git">
      <Branch Name="develop">
        <SolutionSpec />
      </Branch>
    </GitFolder>

    <GitFolder Name="CK-Monitoring" Url="https://github.com/Invenietis/CK-Monitoring.git">
      <Branch Name="develop">
        <SolutionSpec />
      </Branch>
    </GitFolder>

    <GitFolder Name="CK-Core" Url="https://github.com/Invenietis/CK-Core.git">
      <Branch Name="develop">
        <SolutionSpec />
      </Branch>
    </GitFolder>

    <GitFolder Name="SGV-Net" Url="https://github.com/SimpleGitVersion/SGV-Net.git">
      <Branch Name="develop">
        <SolutionSpec DisableSourceLink="true"  />
      </Branch>
    </GitFolder>

    <GitFolder Name="CK-Text" Url="https://github.com/Invenietis/CK-Text.git">
      <Branch Name="develop">
        <SolutionSpec />
      </Branch>
    </GitFolder>

    <GitFolder Name="CSemVer-Net" Url="https://github.com/SimpleGitVersion/CSemVer-Net.git">
      <Branch Name="develop">
        <SolutionSpec />
      </Branch>
    </GitFolder>

  </Folder>

</A1Test>
