<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <InvariantGlobalization>true</InvariantGlobalization>

    <OutputType>Exe</OutputType>
    <IsPackable>true</IsPackable>
    <DevelopmentDependency>true</DevelopmentDependency>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <DebugType>embedded</DebugType>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>ckli</ToolCommandName>
    <Description>Command line tools to manage multi-repository Stacks.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>

    <!-- It's a mess. See https://github.com/dotnet/project-system/issues/3619 -->
    <RunWorkingDirectory>$(MSBuildProjectDirectory)</RunWorkingDirectory>

  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ConsoleAppFramework" Version="5.5.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CKli.Loader\CKli.Loader.csproj" />
  </ItemGroup>

</Project>
