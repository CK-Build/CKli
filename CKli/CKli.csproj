<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <!-- Not sure yet that this can be a dotnet tool. -->
    <IsPackable>false</IsPackable>
    <InvariantGlobalization>true</InvariantGlobalization>

    <!-- It's a mess. See https://github.com/dotnet/project-system/issues/3619 -->
    <RunWorkingDirectory>$(MSBuildProjectDirectory)</RunWorkingDirectory>

  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ConsoleAppFramework" Version="5.5.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\CKli.Loader\CKli.Loader.csproj" />
  </ItemGroup>

</Project>
