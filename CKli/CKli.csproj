<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <InvariantGlobalization>true</InvariantGlobalization>
    <LangVersion>13</LangVersion>
    
    <OutputType>Exe</OutputType>
    <IsPackable>true</IsPackable>
    <DevelopmentDependency>true</DevelopmentDependency>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <DebugType>embedded</DebugType>
    <PackAsTool>true</PackAsTool>
    <ToolCommandName>ckli</ToolCommandName>
    <Description>Command line tools to manage multi-repository Stacks.</Description>

    <!-- It's a mess. See https://github.com/dotnet/project-system/issues/3619 -->
    <RunWorkingDirectory>$(MSBuildProjectDirectory)</RunWorkingDirectory>

  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\CKli.Loader\CKli.Loader.csproj" />
  </ItemGroup>

</Project>
