<A2TestPrivate>

  <LoadLibrary Name="CK.Env.Plugin.SolutionDriver" />
  <LoadLibrary Name="CK.Env.Plugin.Appveyor" />
  <LoadLibrary Name="CK.Env.Plugin.GitLab" />
  <LoadLibrary Name="CK.Env.Plugin.NPM" />
  <LoadLibrary Name="CK.Env.Plugin.CKSetup" />
  <LoadLibrary Name="CK.Env.Plugin.NuGet" />

  <SharedHttpClient />
  <ArtifactCenter />
  <LocalFeedProvider />
  <NuGetClient />
  <NPMClient />
  <CKSetupClient />
  <WorldState />

  <ArtifactRepositories>
    
    <Repository Type="NPMAzure" Organization="Signature-Code" FeedName="CKEnvTest3"
                NPMScope="@signature-code"
                CheckName="NPMAzure:@signature-code->Signature-Code-CKEnvTest3"
                CheckSecretKeyName="AZURE_FEED_SIGNATURE_CODE_PAT" />
    
    <Repository Type="NuGetAzure" Organization="Signature-Code" FeedName="CKEnvTest3"
                  CheckName="NuGetAzure:Signature-Code-CKEnvTest3"
                  CheckSecretKeyName="AZURE_FEED_SIGNATURE_CODE_PAT" />
    
  </ArtifactRepositories>

  <SharedSolutionSpec>
    <NuGetSources>
      <add Name="Signature-OpenSource" Url="https://pkgs.dev.azure.com/Signature-OpenSource/_packaging/Default/nuget/v3/index.json">
        <Credentials UserName="SignatureOpenSource" PasswordSecretKeyName="SIGNATURE_OPENSOURCE_READ_PAT" />
      </add>
      <add Name="Open-Source-CKEnvTest3" Url="https://pkgs.dev.azure.com/Signature-OpenSource/_packaging/CKEnvTest3/nuget/v3/index.json">
        <Credentials UserName="SignatureOpenSource" PasswordSecretKeyName="SIGNATURE_OPENSOURCE_READ_PAT" />
      </add>
      <add Name="Code-CKEnvTest3" Url="https://pkgs.dev.azure.com/Signature-Code/_packaging/CKEnvTest3/nuget/v3/index.json" />
    </NuGetSources>
    <RemoveNuGetSourceNames>
      <add Name="Invenietis - Release" />
      <add Name="Invenietis - Preview" />
      <add Name="Invenietis - CI" />
    </RemoveNuGetSourceNames>
    <ArtifactTargets>
      <add Name="NPMAzure:@signature-code->Signature-Code-CKEnvTest3" />
      <add Name="NuGetAzure:Signature-Code-CKEnvTest3" />
    </ArtifactTargets>
    <NPMSources>
      <add Scope="@signature" Url="https://pkgs.dev.azure.com/Signature-OpenSource/_packaging/Default/npm/registry/" >
        <Credentials UserName="SignatureOpenSource" PasswordSecretKeyName="SIGNATURE_OPENSOURCE_READ_PAT" />
      </add>
      <add Scope="@signature-code" Url="https://pkgs.dev.azure.com/Signature-Code/_packaging/Default/npm/registry/" >
        <Credentials UserName="SignatureCode" PasswordSecretKeyName="SIGNATURE_CODE_READ_PAT" />
      </add>
    </NPMSources>
  </SharedSolutionSpec>

  <Folder Name="Projects">

    <GitFolder Name="CK-Observable-Domain" Url="https://gitlab.com/Signature-Code/CK-Observable-Domain.git">
      <Branch Name="develop">
        <SolutionSpec NoStrongNameSigning="True" >
          <NPMProjects>
            <add  Folder="js" PackageName="@signature-code/ck-observable-domain" />
          </NPMProjects>
        </SolutionSpec>
      </Branch>
    </GitFolder>

  </Folder>

</A2TestPrivate>
