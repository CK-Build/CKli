    <File Name=".editorconfig">
      <MustExist Content="SimpleFiles/.editorconfig"/>
    </File>
    <Folder Name="Common">
      <MustExist />
      <File Name="SharedKey.snk">
        <MustExist Content="SimpleFiles/SharedKey.snk"/>
      </File>
    </Folder>
  </Reusable>

